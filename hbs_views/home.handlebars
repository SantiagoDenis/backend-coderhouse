{{#if products}}
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Thumbnail</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    
                <td>{{this.title}}</td>
                <td>${{this.price}}</td>
                <td>
                    <img src={{this.thumbnail}} alt="image of product" width="60px" height="60px">
                </td>

                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <h2>Theres's no products over here!</h2>
{{/if}}

